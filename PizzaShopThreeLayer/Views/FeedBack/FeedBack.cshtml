
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .FeedBackPage {
        color: red !important;
    }

    textarea {
        width: 850px !important;
    }
    /*h4 {
        display: inline !important;
    }*/
    button {
        display: inline !important;
    }
    #span {
        width: 500px !important;
        height: 5px !important;
        display: block!important
    }
    #span2 {
          width: 700px !important;
        height: 15px !important;
        display: block!important
    }
    #ajax {
        display: inline;
    }
    #time,#link {
        display: inline !important;
        float: right !important;
    }
    #message {
        display: inline!important
    }
    #email{
        display: inline !important;
     
    }
    div {
         word-wrap: break-word!important;
    }
</style>
<div class="container">

    <div class="divPanel page-content">



        <div class="row-fluid">

            <!--Edit Sidebar Content here-->
            <div class="span3">
                <h3>Left Sidebar Content</h3>
                <p>Lorem Ipsum is simply dummy text of the printing and <a href="#">typesetting industry</a>.</p>
                <p> Lorem Ipsum has been the industry’s standard dummy text ever since the 1500s.</p>

                <div class="row-fluid">
                    <div class="span6">
                        <img src="images/placeholder3.jpg" class="img-polaroid" style="margin:5px 0px 15px;" alt="">
                    </div>
                    <div class="span6">
                        <img src="images/placeholder3.jpg" class="img-polaroid" style="margin:5px 0px 15px;" alt="">
                    </div>

                </div>

                <div class="row-fluid">
                    <div class="span6">
                        <img src="images/placeholder3.jpg" class="img-polaroid" style="margin:5px 0px 15px;" alt="">
                    </div>
                    <div class="span6">
                        <img src="images/placeholder3.jpg" class="img-polaroid" style="margin:5px 0px 15px;" alt="">
                    </div>

                </div>

                <h3>Another Section</h3>
                <p>Lorem Ipsum is simply dummy text of the printing and <a href="#">typesetting industry</a>.</p>
                <p> Lorem Ipsum has been the industry’s standard dummy text ever since the 1500s.</p>

            </div>

            <!--/End Sidebar Content -->
            <!--Edit Main Content Area here-->
            <div class="span9" id="divMain">


                <h1>Комментарии</h1>
                <hr>
                <br/>
                <br/>

                @foreach (var mod in @Model)
                {
                    <div id=@mod.Id.ToString()>
                        <h4 id="email"><strong>@mod.UserEmail</strong></h4>
                        <p id="time">@mod.DateTime</p>
                        <span id="span"></span>
                        <p id="message">@mod.Message</p>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Ajax.ActionLink("Удалить комментарий", "Remove", new {ide = @mod.Id.ToString(), Controller = "FeedBack"}, new AjaxOptions {UpdateTargetId = @mod.Id.ToString()}, new {@id="link"})
                        }
                      
                       
                    </div>
                     <span id="span2"></span>
                }


                <p id="divResult"></p>

                @using (Ajax.BeginForm("AddComment", new AjaxOptions
                {
                    UpdateTargetId = "divResult",
                    InsertionMode = InsertionMode.InsertAfter



                }))
                {
                    <p style="width: 130px !important">@Html.TextArea("message")</p>
                    <button type="submit" class="btn btn-success" style="float: left">Отправить</button>


                }



                <!--/End Main Content Area here-->


            </div>
        </div>

        <div id="footerInnerSeparator"></div>
    </div>

</div>
